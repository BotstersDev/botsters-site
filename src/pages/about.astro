  <style>
    .article p {
      margin-bottom: 1.25rem;
    }

    .mission-statement {
      font-size: 1.15rem;
      line-height: 1.7;
      color: var(--color-text);
      padding: 1.5rem;
      background: var(--color-bg-secondary);
      border-left: 4px solid var(--color-accent);
      border-radius: 0 8px 8px 0;
    }

    .article h2 {
      margin-top: 2.5rem;
      margin-bottom: 1.5rem;
    }

    .team-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 2rem;
      margin: 2rem 0;
    }

    .team-card {
      background: var(--color-bg-secondary);
      border: 1px solid #222;
      border-radius: 12px;
      padding: 2rem;
      text-align: center;
    }

    .team-avatar {
      font-size: 4rem;
      margin-bottom: 1rem;
    }

    .team-avatar-img {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      object-fit: cover;
      object-position: top;
      margin-bottom: 1rem;
      border: 3px solid var(--color-accent);
    }

    .ai-badge {
      display: inline-block;
      background: linear-gradient(135deg, #6366f1, #8b5cf6);
      color: white;
      font-size: 0.7rem;
      font-weight: 600;
      padding: 0.25rem 0.6rem;
      border-radius: 9999px;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      margin-top: 0.25rem;
    }

    .team-card h3 {
      margin: 0 0 0.25rem 0;
    }

    .team-role {
      color: var(--color-accent);
      font-weight: 500;
      margin-bottom: 1rem;
    }

    .team-bio {
      color: var(--color-text-muted);
      font-size: 0.95rem;
    }

    .team-links {
      margin-top: 1rem;
    }

    .team-links a {
      margin: 0 0.5rem;
    }

    .cta-box {
      margin-top: 3rem;
      padding: 2rem;
      background: var(--color-bg-secondary);
      border-radius: 12px;
      text-align: center;
    }
  </style>
</BaseLayout>
